include icon.pug

mixin card(inputData)
    - var data = Object.assign({size: 'medium', orientation: 'vertical', mediaPlacement: 'top', actions: true}, inputData)
    .card(class='card--' + data.size + ' card--' + data.orientation + ' card--' + data.mediaPlacement)
        .card--text
            if data.flashline
                .card--flashline.t--family-sansCondensed.t--size-xs.t--weight-light.t--transform-uppercase.t--kering-m.l--margin-bottom-s #{data.flashline}
            .card--headline.t--family-condensed.l--margin-bottom-m(class=`t--size-${data.size.charAt(0)} ${data.size === 'small' ? 't--family-serif t--weight-medium' : 't--family-condensed'}`) #{data.title}
            if data.summary
                .card--summary.t--family-serif.t--size-s #{data.summary}
            if data.byline || data.timestamp
                .card--byline.t--family-sansCondensed.t--size-xs.t--color-nickel.t--weight-light.l--margin-top-m
                    if data.timestamp 
                        | #{data.timestamp}
                    if data.byline && data.timestamp 
                        | &nbsp;Â·&nbsp;
                    if data.byline
                        | by #{data.byline}
        if data.image
            .card--image
                img(src=data.image)
        if data.actions
            .card--actions
                .card--actions-action
                    +icon('bookmark')
                    | Save
                .card--actions-action
                    +icon('share')
                    | Share
                .card--actions-action
                    | Comment
                    +icon('comments')

